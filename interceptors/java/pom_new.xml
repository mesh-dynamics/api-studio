<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.cube.interceptor</groupId>
    <artifactId>root</artifactId>
    <version>V1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <repositories>
    	<repository>
    		<id>github</id>
    		<name>GitHub OWNER Apache Maven Packages</name>
    		<url>https://maven.pkg.github.com/cube-io-corp/agent</url>
    	</repository>
    </repositories>

    	<dependencies>
    		<!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
    		<dependency>
    			<groupId>commons-io</groupId>
    			<artifactId>commons-io</artifactId>
    			<version>2.6</version>
    		</dependency>

    		<dependency>
    			<groupId>io.cube</groupId>
    			<artifactId>agent</artifactId>
    			<version>1.0.6</version>
    		</dependency>
        <dependency>
          <groupId>com.cube.interceptor</groupId>
        	<artifactId>md-apache-cxf-ingress-interceptor</artifactId>
        	<version>0.0.1</version>
        </dependency>
      </dependencies>
    <build>
  		<plugins>
  			<plugin>
  				<artifactId>maven-compiler-plugin</artifactId>
  				<version>3.8.0</version>
  				<configuration>
  					<source>11</source>
  					<target>11</target>
  				</configuration>
  			</plugin>
  			<!--  needed for unit and integration testing  -->
  			<plugin>
  				<groupId>org.apache.maven.plugins</groupId>
  				<artifactId>maven-shade-plugin</artifactId>
  				<version>3.2.2</version>
  				<executions>
  					<execution>
  						<phase>package</phase>
  						<goals>
  							<goal>shade</goal>
  						</goals>
  						<configuration>
  							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
  							<artifactSet>
  								<includes>
                    <include>com.cube.interceptor:md-apache-cxf-ingress-interceptor</include>
  									<include>io.cube:agent</include>
  									<include>io.cube:commons</include>
  								</includes>
  							</artifactSet>
  						</configuration>
  					</execution>
  				</executions>
  			</plugin>

  		</plugins>
  	</build>

</project>