<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.cube</groupId>
  <artifactId>md-apache-cxf-interceptor</artifactId>
  <version>1.2.6</version>
  <packaging>jar</packaging>

  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub CubeIO Apache Maven Packages</name>
      <url>https://maven.pkg.github.com/cube-io-corp/interceptor-framework</url>
    </repository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>io.cube</groupId>
      <artifactId>md-apache-cxf-egress-interceptor</artifactId>
      <version>1.2.6</version>
    </dependency>
    <dependency>
      <groupId>io.cube</groupId>
      <artifactId>md-apache-cxf-ingress-interceptor</artifactId>
      <version>1.2.6</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <!--  needed for unit and integration testing  -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.2</version>
        <configuration>
          <relocations>
            <relocation>
              <pattern>com.fasterxml.jackson</pattern>
              <shadedPattern>io.md.fasterxml.jackson</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.google</pattern>
              <shadedPattern>io.md.google.code.gson</shadedPattern>
            </relocation>
            <relocation>
              <pattern>net.dongliu</pattern>
              <shadedPattern>io.md.dongliu</shadedPattern>
            </relocation>
<!--            <relocation>-->
<!--              <pattern>org.slf4j</pattern>-->
<!--              <shadedPattern>io.md.slf4j</shadedPattern>-->
<!--            </relocation>-->
<!--            <relocation>-->
<!--              <pattern>javax.ws.rs</pattern>-->
<!--              <shadedPattern>io.md.javax.ws.rx</shadedPattern>-->
<!--            </relocation>-->
<!--            <relocation>-->
<!--              <pattern>javax.annotation</pattern>-->
<!--              <shadedPattern>io.md.javax.annotation</shadedPattern>-->
<!--            </relocation>-->
<!--            <relocation>-->
<!--              <pattern>org.apache</pattern>-->
<!--              <shadedPattern>io.md.apache</shadedPattern>-->
<!--            </relocation>-->
            <relocation>
              <pattern>io.jaegertracing</pattern>
              <shadedPattern>io.md.jaegertracing</shadedPattern>
            </relocation>
            <relocation>
              <pattern>okhttp3</pattern>
              <shadedPattern>io.md.okhttp3</shadedPattern>
            </relocation>
            <relocation>
              <pattern>okio</pattern>
              <shadedPattern>io.md.okio</shadedPattern>
            </relocation>
            <relocation>
              <pattern>kotlin</pattern>
              <shadedPattern>io.md.kotlin</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.jetbrains</pattern>
              <shadedPattern>io.md.jetbrains</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.intellij</pattern>
              <shadedPattern>io.md.intellij</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.flipkart</pattern>
              <shadedPattern>io.md.flipkart</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.lmax</pattern>
              <shadedPattern>io.md.lmax</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.twitter</pattern>
              <shadedPattern>io.md.twitter</shadedPattern>
            </relocation>
            <relocation>
              <pattern>io.opentracing</pattern>
              <shadedPattern>io.md.opentracing</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
