<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cube.interceptor</groupId>
  <artifactId>apache_cxf_2_7_interceptors</artifactId>
  <version>0.0.5</version>
  <packaging>jar</packaging>

  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub CubeIO Apache Maven Packages</name>
      <url>https://maven.pkg.github.com/cube-io-corp/interceptor-framework</url>
    </repository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>com.cube.interceptor</groupId>
      <artifactId>md-apache-cxf-egress-interceptor</artifactId>
      <version>1.0.2</version>
    </dependency>
    <dependency>
      <groupId>com.cube.interceptor</groupId>
      <artifactId>md-apache-cxf-ingress-interceptor</artifactId>
      <version>1.0.2</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>11</source>
          <target>11</target>
        </configuration>
      </plugin>
      <!--  needed for unit and integration testing  -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <artifactSet>
                <includes>
                  <include>com.cube.interceptor:md-apache-cxf-egress-interceptor</include>
                  <include>com.cube.interceptor:md-apache-cxf-ingress-interceptor</include>
                  <include>io.cube:agent</include>
                  <include>io.cube:commons</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
