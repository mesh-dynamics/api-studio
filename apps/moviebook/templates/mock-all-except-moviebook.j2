apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: reviews
  namespace: {{namespace}}
spec:
  hosts:
  - reviews
  http:
  - match:
    - uri:
        prefix: /reviews
    rewrite:
      uri: /ms/{{customer}}/{{cube_application}}/{{cube_instance}}/reviews/reviews
    route:
    - destination:
        host: cubews-mock
        port:
          number: 8080
